<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_on_secondary"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/browsing_mode"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_local_browsing"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="#ffffff"
            android:text="Worcester, MA"
            android:textSize="24dp" />

        <LinearLayout
            android:id="@+id/radius_holder"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/radius_image"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_radius" />

            <TextView
                android:id="@+id/radius_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:text="10" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_refresh"
            android:layout_marginStart="6dp"
            android:padding="16dp" />

    </LinearLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/post_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

